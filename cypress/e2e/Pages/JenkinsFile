pipelinel{
        agent any
parameters{


string (name:'SPEC', defaultValue: "cypress/integration/**/**", description: "")
choice(name: 'BROWSER', choices: ['chrome', 'edge', 'firefox'], description: "")
}
options{
ansiColor ( 'xterm')
}
stages{
stage( 'Deploying'){
echo "Building the application"
}
stage( 'Testing'){
       steps{
             bat"npn i"
             bat "npx cypress run --browser=$ (BROWSER} -- spec ${SPEC}"
       }

}
stage('Deploying'){
echo "Deploy the application "
}

}
}